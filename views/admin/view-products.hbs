<section>
    <div class="container">
        <div class="row">
            <a class="btn btn-success ml-auto m-4"  href="/admin/add-product">Add Product</a>
        </div>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">S.No</th>
      <th scope="col">Product</th>
      <th scope="col">Category</th>
      <th scope="col">Descreption</th>
      <th scope="col">Image</th>

    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.descreption}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want delete {{this.name}} ?')">Delete</a>
      </td>
      
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>